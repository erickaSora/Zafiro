                  <children>
                    <HBox id="HBox" alignment="CENTER" spacing="0.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                      <children>
                        <Pane maxHeight="182.0" maxWidth="40.0" prefHeight="175.0" prefWidth="40.0" styleClass="iconContent">
                          <children>
                            <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="10.0" layoutY="76.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                <Image url="@img/ico/category_black.png" />
                              </image>
                            </ImageView>
                          </children>
                        </Pane>
                        <TextArea fx:id="annotationObs" onKeyReleased="#validateOBS" prefHeight="142.0" prefWidth="411.0" wrapText="true">
                          <tooltip>
                            <Tooltip text="%annotationDescTltp" />
                          </tooltip>
                        </TextArea>
                      </children>
                    </HBox>
                    <Label fx:id="vldName" styleClass="lblValidateError" text="Label" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
