              <tooltip>
                <Tooltip text="%helpTltp" fx:id="tlpHelp" />
              </tooltip>
            </Button>
          </children>
        </AnchorPane>
      </content>
    </ScrollPane>
  </children>
  <stylesheets>
    <URL value="@css/modal_green.css" />
  </stylesheets>
</AnchorPane>
